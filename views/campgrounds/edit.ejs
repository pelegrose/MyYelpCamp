<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit <%= camp.title %></h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%= camp.title %>"
                    required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" id="location" name="campground[location]"
                    value="<%= camp.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price:</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" id="price" name="campground[price]" placeholder="0.0"
                        aria-label="price" aria-describedby="price-label" value="<%= camp.price %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"
                    required><%= camp.description %></textarea>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% camp.images.forEach((image, i) => { %>
                <img src="<%= image.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="imgae-<%= i %>" name="deleteImages[]" value="<%= image.filename %>">
                </div>
                <label for="imgae-<%= i %>">Delete?</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </form>
        <div>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</div>